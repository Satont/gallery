{
  "compilerOptions": {
    "lib": ["ES6"],
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "inlineSourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "esModuleInterop": true,
    "typeRoots": [
      "./node_modules/@types",
      "typings"
    ],
    "skipLibCheck": true
  }
}
