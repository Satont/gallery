<section class="container h-100 mb-3 pic-page">
  <div class="card-columns">
    {{#each list}}
      <div class="card" data-card-for="{{ instance.id }}">
        <img src="{{ instance.fileUrl }}" style="max-height: 300px;" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title">{{ instance.name }}</h5>
          <p class="card-text">
            {{#if author}}
              {{ author.tag }}
            {{else}}
              Unknown author
            {{/if}}
          </p>
        </div>
        <div class="card-footer">
          <form class="moderation-form" data-id="{{ instance.id }}">
            <label for="status{{ instance.id }}">Action</label>
            <select name="status" id="status{{ instance.id }}" class="form-control">
              <option value="approved" selected>Approve</option>
              <option value="declined">Decline</option>
            </select>

            <label for="category{{ instance.id }}">Category</label>
            <select name="category" id="category{{ instance.id }}" class="form-control">
              {{#each ../categories}}
                <option value="{{this}}">{{this}}</option>
              {{/each}}
            </select>

            <button type="submit" class="btn btn-danger w-100 mt-1">Save</button>
          </form>
        </div>
      </div>
    {{/each}}
</div>
